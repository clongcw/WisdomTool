<Application
    x:Class="WisdomTool.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WisdomTool"
    xmlns:pu="clr-namespace:Panuon.WPF.UI;assembly=Panuon.WPF.UI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <local:Bootstrapper x:Key="Bootstrapper" />
                    <FontFamily x:Key="WisdomToolIcon">/WisdomTool.UI;component/Resources/Fonts/#iconfont</FontFamily>

                    <pu:GlobalSettings
                        x:Key="globalSettings"
                        FontFamily="Inter"
                        FontSize="14"
                        IconFontFamily="{StaticResource WisdomToolIcon}"
                        IconFontSize="16" />
                </ResourceDictionary>

                <ResourceDictionary Source="pack://application:,,,/Panuon.WPF.UI;component/Control.xaml" />
                <ResourceDictionary Source="/WisdomTool.UI;component/Themes/Light.xaml" />
                <ResourceDictionary Source="/WisdomTool.UI;component/Collection.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
